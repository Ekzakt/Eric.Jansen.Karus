@page
@model QuotesPageModel
@{
    ViewData["Title"] = "Quotes";
}

<h1>Quotes</h1>

<form method="post" asp-page-handler="Upsert">
    <div class="container p-0">
        <div class="row">
            <div class="col mb-3">
                <label for="quoteText" class="form-label">Quote text:</label>
                <textarea class="form-control" rows="3" asp-for="Quote!.Text"></textarea>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-sm-4">
            <div class="col mb-3">
                <label for="quoteAuthor" class="form-label">Author:</label>
                <input type="text" class="form-control" list="datalistOptions" asp-for="Quote!.Author" />
                <datalist id="datalistOptions">
                  <option value="San Francisco" />
                  <option value="New York" />
                  <option value="Seattle" />
                  <option value="Los Angeles" />
                  <option value="Chicago" />
                </datalist>
            </div>
            <div class="col mb-3">
                <label for="quoteLocation" class="form-label">Location:</label>
                <input type="text" class="form-control" asp-for="Quote!.Location">
            </div>
            <div class="col mb-3">
                <label for="quoteCategory" class="form-label">Category:</label>
                <input type="text" class="form-control" asp-for="Quote!.Category">
            </div>
            <div class="col mb-3">
                <label for="quoteYear" class="form-label">Year:</label>
                <input type="text" class="form-control" asp-for="Quote!.QuoteYear">
            </div>
        </div>
        <div class="row">
            <div class="col mt-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <input type="hidden" asp-for="Quote!.Id" />
    </div>
</form>


<table>
    <thead>
        <tr>
            <th>Text</th>
            <th>Author</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quote in Model.Quotes ?? [])
        {
            <tr>
                <td>@quote.Text</td>
                <td>@quote.Author</td>
                <td>@quote.Category</td>
                <td>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@quote.Id" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
